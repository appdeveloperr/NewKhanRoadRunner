<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_number"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:drawableTop="@color/bpblack"
        android:drawableBottom="@color/bpblack"
        android:drawableLeft="@color/bpblack"
        android:drawableRight="@color/bpblack"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_fare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
